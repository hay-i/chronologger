package main

templ hello(name string) {
	<div>Hello, { name }</div>
	<a href="/" class="btn">Click me</a>
	<style type="text/css">
		.btn {
			display: inline-block;
			border: 0;
			background-color: #00FF00;
			border-radius: 999px;
			padding: 1rem 2rem;
			transition: 150ms;
			cursor: pointer;
		}
		.btn:hover{
			opacity: 0.5;
		}
	</style>
}
