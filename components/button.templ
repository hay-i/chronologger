package components

import (
	"fmt"
)

type buttonVariant string

const (
	primary   buttonVariant = "primary"
	secondary buttonVariant = "secondary"
)

templ button(attrs templ.Attributes, content string, variant buttonVariant) {
	<button { attrs... } class={ fmt.Sprintf("btn--%s", variant) }>
		{ content }
	</button>
}

templ anchorButton(attrs templ.Attributes, content string, variant buttonVariant) {
	<a { attrs... } href={ templ.URL(attrs["href"].(string)) } class={ fmt.Sprintf("btn--%s", variant) }>
		{ content }
	</a>
}
